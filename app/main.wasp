  executor: PgBoss,
  perform: {
    fn: import { sendBirthdayCampaigns } from "@src/communication/jobs/birthdayCampaign"
  },
  schedule: {
    cron: "0 9 * * *" // Daily at 9 AM
  },
  entities: [Client, CommunicationLog, Salon]
}

