  executor: PgBoss,
  perform: {
    fn: import { sendReactivationCampaigns } from "@src/communication/jobs/reactivationCampaign"
  },
  schedule: {
    cron: "0 10 * * 1" // Weekly on Monday at 10 AM
  },
  entities: [Client, CommunicationLog, Salon]
}

