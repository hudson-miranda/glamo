model Salon {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name           String
  description    String?
  cnpj           String?
  address        String?
  addressNumber  String?
  complement     String?
  city           String?
  state          String?
  zipCode        String?
  phoneType      String?
  phone          String?
  phoneType2     String?
  phone2         String?
  email          String?
  targetAudience String[]
  siteUrl        String?
  facebookUrl    String?
  instagramUrl   String?
  deletedAt      DateTime?

  activeUsers        User[]                @relation("ActiveSalon")
  userSalons         UserSalon[]
  roles              Role[]
  clients            Client[]
  services           Service[]
  categories         Category[]
  products           Product[]
  packages           Package[]
  appointments       Appointment[]
  sales              Sale[]
  notifications      Notification[]
  availableTimeslots AvailableTimeslot[]
  serviceRooms       ServiceRoom[]
  clientCredits      ClientCredit[]
  cashSessions       CashRegisterSession[]
  productBrands      ProductBrand[]
  suppliers          Supplier[]
  invitesSent        SalonInvite[]         @relation("InvitesSent")
  employees          Employee[] // Colaboradores do salão
  timeBlocks         TimeBlock[]
  waitingLists       WaitingList[]

  // Phase 2: Communication & Engagement relations
  communicationLogs  CommunicationLog[]
  marketingCampaigns MarketingCampaign[]
  clientSegments     ClientSegment[]
  campaignTemplates  CampaignTemplate[]
  bookingConfig      BookingConfig?

  // Phase 3: Loyalty & Advanced Features relations
  loyaltyPrograms       LoyaltyProgram[]
  clientLoyaltyBalances ClientLoyaltyBalance[]
  loyaltyTransactions   LoyaltyTransaction[]
  referralPrograms      ReferralProgram[]
  referrals             Referral[]
  clientPhotos          ClientPhoto[]
  anamnesisForms        AnamnesisForm[]
  clientAnamnesis       ClientAnamnesis[]
  clientMetrics         ClientMetrics[]
  salonAnalytics        SalonAnalytics[]

  // Financial Management relations
  financialCategories FinancialCategory[]
  accountsReceivable  AccountReceivable[]
  accountsPayable     AccountPayable[]
  expenses            Expense[]
  budgets             Budget[]
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

model SalonInvite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId      String
  email        String
  roleTemplate String // Changed from roleId to roleTemplate name (e.g., 'owner', 'manager', etc.)
  invitedBy    String
  status       InviteStatus @default(PENDING)
  expiresAt    DateTime
  acceptedAt   DateTime?
  rejectedAt   DateTime?

  salon   Salon @relation("InvitesSent", fields: [salonId], references: [id], onDelete: Cascade)
  inviter User  @relation(fields: [invitedBy], references: [id], onDelete: Restrict)

  @@unique([salonId, email])
  @@index([email])
  @@index([status])
}

model UserSalon {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId       String
  salonId      String
  roleTemplate String // "owner", "manager", "professional", "cashier", "assistant", "client"
  isActive     Boolean   @default(true)
  deletedAt    DateTime?

  // Bitflag permissions (for custom overrides)
  primaryPermissions   BigInt @default(0) // Core business permissions (64 bits)
  secondaryPermissions BigInt @default(0) // Advanced module permissions (64 bits)

  user  User  @relation(fields: [userId], references: [id], onDelete: Restrict)
  salon Salon @relation(fields: [salonId], references: [id], onDelete: Restrict)

  // DEPRECATED: Keeping for backwards compatibility during migration
  userRoles UserRole[]

  @@unique([userId, salonId])
  @@index([roleTemplate])
}

// ============================================================================
// RBAC Models - Optimized with Bitflags
// ============================================================================

model RoleTemplate {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String  @unique // "owner", "manager", "professional", "cashier", "assistant", "client"
  displayName String // Friendly name for UI
  description String?
  isSystem    Boolean @default(true) // System templates cannot be deleted

  // Bitflag permissions
  primaryPermissions   BigInt // Core business permissions (64 bits)
  secondaryPermissions BigInt // Advanced module permissions (64 bits)

  @@index([isSystem])
}

