// ============================================================================
// Financial Management Models
// ============================================================================

// Financial categories for income and expenses
model FinancialCategory {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId     String
  name        String
  description String?
  type        FinancialCategoryType // INCOME or EXPENSE
  parentId    String? // For subcategories
  color       String? // Hex color for visualization
  deletedAt   DateTime?

  salon              Salon               @relation(fields: [salonId], references: [id], onDelete: Restrict)
  parent             FinancialCategory?  @relation("SubCategories", fields: [parentId], references: [id], onDelete: SetNull)
  subCategories      FinancialCategory[] @relation("SubCategories")
  accountsReceivable AccountReceivable[]
  accountsPayable    AccountPayable[]
  expenses           Expense[]
  budgetItems        BudgetItem[]

  @@index([salonId])
  @@index([type])
}

enum FinancialCategoryType {
  INCOME
  EXPENSE
}

// Accounts Receivable - Money to receive
model AccountReceivable {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId      String
  clientId     String?
  categoryId   String?
  description  String
  amount       Float
  dueDate      DateTime
  receivedDate DateTime?
  status       AccountStatus @default(PENDING)
  notes        String?
  saleId       String? // Link to sale if applicable
  deletedAt    DateTime?

  salon    Salon              @relation(fields: [salonId], references: [id], onDelete: Restrict)
  client   Client?            @relation(fields: [clientId], references: [id], onDelete: SetNull)
  category FinancialCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  sale     Sale?              @relation(fields: [saleId], references: [id], onDelete: SetNull)

  @@index([salonId])
  @@index([status])
  @@index([dueDate])
}

// Accounts Payable - Money to pay
model AccountPayable {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId     String
  supplierId  String?
  categoryId  String?
  description String
  amount      Float
  dueDate     DateTime
  paidDate    DateTime?
  status      AccountStatus @default(PENDING)
  notes       String?
  deletedAt   DateTime?

  salon    Salon              @relation(fields: [salonId], references: [id], onDelete: Restrict)
  supplier Supplier?          @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  category FinancialCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([salonId])
  @@index([status])
  @@index([dueDate])
}

enum AccountStatus {
  PENDING
  PAID
  OVERDUE
  PARTIALLY_PAID
  CANCELLED
}

// General expenses not related to purchases
model Expense {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId       String
  categoryId    String?
  description   String
  amount        Float
  expenseDate   DateTime  @default(now())
  paymentMethod String? // Cash, Card, Transfer, etc
  notes         String?
  deletedAt     DateTime?

  salon    Salon              @relation(fields: [salonId], references: [id], onDelete: Restrict)
  category FinancialCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([salonId])
  @@index([expenseDate])
}

// Budget planning for salons
model Budget {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId      String
  name         String
  description  String?
  startDate    DateTime
  endDate      DateTime
  totalPlanned Float
  status       BudgetStatus @default(ACTIVE)
  deletedAt    DateTime?

  salon       Salon        @relation(fields: [salonId], references: [id], onDelete: Restrict)
  budgetItems BudgetItem[]

  @@index([salonId])
  @@index([status])
}

enum BudgetStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

// Items within a budget
model BudgetItem {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  budgetId      String
  categoryId    String?
  description   String
  plannedAmount Float
  actualAmount  Float   @default(0)

  budget   Budget             @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  category FinancialCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([budgetId])
}
