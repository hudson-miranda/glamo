model Service {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salonId                    String
  createdByUserId            String
  updatedByUserId            String?
  serviceRoomId              String?
  categoryId                 String?
  name                       String
  description                String?
  hasVariants                Boolean      @default(false)
  duration                   Int
  price                      Float
  priceType                  String       @default("FIXED") // FIXED, FROM, CONSULTATION
  costValue                  Float        @default(0)
  costValueType              ValueType    @default(FIXED)
  commissionValue            Float        @default(0)
  commissionValueType        ValueType    @default(PERCENT)
  nonCommissionableValue     Float        @default(0)
  nonCommissionableValueType ValueType    @default(FIXED)
  cardColor                  String?
  imagePath                  String?
  active                     Boolean      @default(true)
  isFavorite                 Boolean      @default(false)
  isVisible                  Boolean      @default(true)
  requiresDeposit            Boolean      @default(false)
  depositAmount              Float?
  allowOnlineBooking         Boolean      @default(true)
  advanceBookingTime         Int          @default(0) // minutos de antecedência
  cashbackActive             Boolean      @default(false)
  cashbackValue              Float        @default(0)
  cashbackValueType          ValueType    @default(FIXED)
  returnActive               Boolean      @default(false)
  returnDays                 Int          @default(0)
  returnMessage              String?
  instructions               String?
  serviceListItem            String?
  cnae                       String?
  municipalServiceCode       String?
